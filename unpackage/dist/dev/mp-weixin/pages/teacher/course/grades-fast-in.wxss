
::-webkit-scrollbar {
		display: none;
}
.content {
		position: absolute;
		height: 100%;
		width: 100%;
		background: linear-gradient(to bottom, #FFFFFF, #F0F0F0 50%, #F0F0F0 50%);
}
.swiper-view {
		position: relative;
		width: 100%;
		height: 160rpx;
		top: 20rpx;
		/* background-color: aqua; */
}
.swiper-item {
		position: relative;
		height: 160rpx;
		width: 690rpx;
		/* background-color: black; */
		border-radius: 40rpx;
		/* border-style: solid; */
		/* border-color: black; */
		border-width: 1px;
}
.swiper-item-view {
		position: relative;
		height: 160rpx;
		width: 670rpx;
		left: 10rpx;
		/* background-color: black; */
		border-radius: 40rpx;
		border-style: solid;
		border-color: #548CFF;
		border-width: 1px;
		display: flex;
}
.item-subject {
		position: relative;
		height: 110rpx;
		width: 110rpx;
		background-color: #E5EEFF;
		left: 30rpx;
		top: 30rpx;
		border-radius: 30rpx;
		line-height: 100rpx;
		text-align: center;
		font-size: 32rpx;
		font-weight: 800;
		color: #548CFF;
}
.item-info {
		position: relative;
		height: 110rpx;
		top: 30rpx;
		width: 400rpx;
		/* background-color: aqua; */
		left: 50rpx;
}
.item-title {
		position: relative;
		font-size: 34rpx;
		font-weight: 800;
		color: #548CFF;
}
.item-time {
		position: relative;
		color: #7E7E7E;
		top: 20rpx;
		left: 13rpx;
}
.item-tag {
		position: relative;
		height: 40rpx;
		width: 120rpx;
		top: 60rpx;
		left: 20rpx;
		text-align: center;
		line-height: 40rpx;
		border-radius: 10rpx;
		color: #548CFF;
		background-color: #E4EDFE;
		font-size: 25rpx;
}
.grades-in {
		position: relative;
		width: 100%;
		/* background-color: aqua; */
}
.grades-in-title {
		/* background-color: aqua; */
		position: relative;
		width: 88%;
		left: 6%;
		height: 55rpx;
		display: flex;
		top: 50rpx;
}
.grades-in-list {
		position: relative;
		width: 100%;
		top: 70rpx;
		/* background-color: aqua; */
		display: flex;
		flex-wrap: wrap;
		margin: 0;
		align-content: flex-start;
		overflow-y: auto;
}
.list-item {
		position: relative;
		width: 300rpx;
		margin-top: 30rpx;
		margin-left: 60rpx;
		min-width: 300rpx;
		height: 180rpx;
		background-color: #FFFFFF;
		border-radius: 40rpx;
		display: flex;
}
.list-item-info {
		position: relative;
		width: 150rpx;
		height: 190rpx;
}
.list-item-avatar {
		position: relative;
		width: 100rpx;
		height: 100rpx;
		border-radius: 50%;
		background-color: #FE9C76;
		left: 20rpx;
		top: 20rpx;
}
.list-item-name {
		position: relative;
		width: 100rpx;
		height: 40rpx;
		left: 20rpx;
		top: 25rpx;
		/* background-color: aqua; */
		text-align: center;
		font-size: 28rpx;
		letter-spacing: 3rpx;
}
.list-item-grades {
		position: relative;
		width: 120rpx;
		height: 60rpx;
		top: 60rpx;
		border-radius: 10rpx;
		background-color: #E6E6E6;
}
.list-item-input {
		position: relative;
		height: 60rpx;
		text-align: center;
		font-size: 34rpx;
		font-weight: 700;
		color: #7E7E7E;
}
