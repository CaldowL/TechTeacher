
::-webkit-scrollbar {
		display: none;
}
.content {
		position: absolute;
		height: 100%;
		width: 100%;
		background: linear-gradient(to bottom, #FFFFFF, #F0F0F0 50%, #F0F0F0 50%);
}
.avatar {
		position: relative;
		display: flex;
		width: 88%;
		left: 6%;
}
.image_avatar {
		position: relative;
		height: 150rpx;
		width: 150rpx;
		/* left: 30rpx; */
}
.image_avatar_image {
		height: 150rpx;
		width: 150rpx;
		border-radius: 50%;
		background-color: #FEEB97;
}
.user-info {
		position: relative;
		top: 15rpx;
		left: 30rpx;
}
.user-name {
		position: relative;
		font-size: 36rpx;
		top: 15rpx;
}
.user-data {
		position: relative;
		display: flex;
		top: 40rpx;
}
.user-data-txt {
		position: relative;
		font-size: 26rpx;
